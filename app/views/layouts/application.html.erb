<!DOCTYPE html>
<html>
<head>
  <title>Beer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container">
      <%= link_to('Home', root_path, class: "btn btn-default btn-lg") %>
        <% if user_signed_in? %>
          <%= link_to('Edit Account', edit_user_registration_path, class: "btn btn-default btn-lg" )%>
          <%= link_to('Logout', destroy_user_session_path, class: "btn btn-default btn-lg", method: :delete) %>
        <% else %>
          <%= link_to('Sign Up', new_user_registration_path, class: "btn btn-default btn-lg") %>
          <%= link_to('Sign In', new_user_session_path, class: "btn btn-default btn-lg") %>
      <% end %>
    </div>
  </nav>


  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
<div class="container">
  <%= yield %>
</div>

</body>
</html>
